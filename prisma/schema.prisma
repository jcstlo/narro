generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  createdAt DateTime @default(now())
  spaces    Space[]
  groups    Group[]
}

model Space {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  links     Link[]
  groups    Group[]
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  links     Link[]
  space     Space    @relation(fields: [spaceId], references: [id])
  spaceId   Int
}
